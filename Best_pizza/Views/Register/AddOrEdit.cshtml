                <input type="submit" value="Зарегистрироваться" class="btn btn-default" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <label class=" label-success ">@ViewBag.SuccessMessage </label>
            </div>
        </div>
    </div>
