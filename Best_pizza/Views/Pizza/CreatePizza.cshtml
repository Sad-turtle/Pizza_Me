@model Best_pizza.Models.Ingredients

@{ ViewBag.Title = "Собери свою пиццу"; }

<h2> Создай свою пиццу</h2>
@using (@Html.BeginForm("CreatePizzaConfirm", "Order"))
{
    <h4>Тесто:</h4> foreach (var dough in Model.Doughs)
    {
        <div id="pizzaCard" class="card" style="width: 350px; display: inline-block; border: solid; border-color: lightgray; margin: 10px; background-color: whitesmoke">
            <div class="card-body">
                <h3 class="card-title" style="margin-left: 40px">@Html.DisplayFor(modelItem => dough.Name)</h3>
                <img class="card-img-top" src="~/Images/@Html.DisplayFor(modelItem => dough.Picture)" width="200" height="150" alt="Card image cap" , style="margin-left: 75px">
                <div class="card-text" style="display: inline-block">
                    <strong>Калории:</strong> @Html.DisplayFor(modelItem => dough.Calories) кал.
                </div>
                <div class="card-text" style="display: inline-block">
                    
                </div>
                <div class="card-text" style="display: inline-block">
                    <strong>Цена:</strong> $@Html.DisplayFor(modelItem => dough.Price)
                </div>
                <div class="cart-text">
                    Тесто: @Html.CheckBox("dough" + dough.Id)
                </div>
            </div>
        </div> }
    <h4>Текстура теста:</h4> foreach (var doughType in Model.DoughTypes)
    {
        <div id="pizzaCard" class="card" style="width: 350px; display: inline-block; border: solid; border-color: lightgray; margin: 10px; background-color: whitesmoke">
            <div class="card-body">
                <h3 class="card-title" style="margin-left: 40px">@Html.DisplayFor(modelItem => doughType.Name)</h3>
                <div class="card-text" style="display: inline-block">
                    <strong>Калории:</strong> @Html.DisplayFor(modelItem => doughType.Calories) кал.
                </div>
                <div class="card-text" style="display: inline-block">
                    
                </div>
                <div class="card-text" style="display: inline-block">
                    <strong>Цена:</strong> $@Html.DisplayFor(modelItem => doughType.Price)
                </div>
                <div class="cart-text">
                    Добавить тип теста: @Html.CheckBox("doughType" + doughType.Id)
                </div>
            </div>
        </div> }

    <h4>Топинги:</h4> foreach (var topping in Model.Toppings)
    {
        <div id="pizzaCard" class="card" style="width: 350px; display: inline-block; border: solid; border-color: lightgray; margin: 10px; background-color: whitesmoke">
            <div class="card-body">
                <h3 class="card-title" style="margin-left: 40px">@Html.DisplayFor(modelItem => topping.Name)</h3>
                <img class="card-img-top" src="~/Images/@Html.DisplayFor(modelItem => topping.Picture)" width="200" height="150" alt="Card image cap" , style="margin-left: 75px">
                <div class="card-text" style="display: inline-block">
                    <strong>Калории:</strong> @Html.DisplayFor(modelItem => topping.Calories) кал.
                </div>
                <div class="card-text" style="display: inline-block">
                  
                </div>
                <div class="card-text" style="display: inline-block">
                    <strong>Цена:</strong> $@Html.DisplayFor(modelItem => topping.Price)
                </div>
                <div class="cart-text">
                    Добавить топинг: @Html.CheckBox("topping" + topping.Id)
                </div>
            </div>
        </div> }
    <div><input type="submit" value="Добавить в корзину" class="btn btn-danger" /></div>}

<div style="display: inline-block">@Html.ActionLink("На главную", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" }) &#127829;</div>
